<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCourseUpdation"
    android:background="#34CAC5C5"
    android:padding="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="14dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/updacn"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#ff6200ee"
            >
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Details"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/updacampus"
                android:padding="5dp"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="40dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/updadepartment"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@drawable/textfiled_border">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/updaduration"
                android:padding="5dp"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="38dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outcome:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/updaoutcome"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:layout_marginLeft="32dp"
                android:padding="5dp"
                android:background="@drawable/textfiled_border">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syllabus:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:id="@+id/updasyllabus"
                android:scrollbars="vertical"
                android:padding="5dp"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="40dp">
            </EditText>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Qualification Criteria :"
            android:layout_marginTop="10dp"
            android:textSize="20dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10th:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/upda10th"
                android:padding="5dp"
                android:inputType="number"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="20dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12th:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>

            <EditText
                android:id="@+id/upda12th"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="20dp"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UG:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>

            <EditText
                android:id="@+id/updapg"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="33dp"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG:"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="number"
                android:id="@+id/updaug"
                android:padding="5dp"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="33dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline:"
                android:layout_marginTop="10dp"
                android:textSize="20dp">
            </TextView>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/updadeadline"
                android:padding="5dp"
                android:inputType="datetime"
                android:background="@drawable/textfiled_border"
                android:layout_marginLeft="33dp">
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/buttoninsideupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/side_nav_bar"
            android:text="Update" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </TextView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>